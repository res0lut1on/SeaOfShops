@model SeaOfShops.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center display-4">Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Сompleted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Сompleted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class = "col-sm-10">
            <ol class="list-group">
                @foreach (var products in Model.Products)
                {
                    <li class="list-group-item" style="background-color:aliceblue;border:hidden">@(products.ProductName)</li>
                }
            </ol>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owner.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owner.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owner.UserAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner.UserAddress)
        </dd>
    </dl>
</div>
<div>
    @if (this.User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.OrderId" class="btn btn-dark">Edit</a>         
    }
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
