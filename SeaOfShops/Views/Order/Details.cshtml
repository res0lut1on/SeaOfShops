@model SeaOfShops.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center display-4">Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceWithProc)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Сompleted)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Сompleted)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class="col-sm-10 mt-2">
            <ol class="list-group">
                @foreach (var products in Model.Products)
                {
                    <li class="list-group-item" style="border:hidden">@(products.ProductName)</li>
                }
            </ol>
        </dd>
            <h4>Owner</h4>
            <hr class="mt-2"/>
        <dt class="col-sm-2 mt-4">
            @Html.DisplayNameFor(model => model.Owner.Email)
        </dt>
        <dd class="col-sm-10 mt-4">
            @Html.DisplayFor(model => model.Owner.Email)
        </dd>
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Owner.FullName)
        </dt>
        <dd class="col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Owner.FullName)
        </dd>
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Owner.UserAddress)
        </dt>
        <dd class="col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Owner.UserAddress)
        </dd>
    </dl>
</div>
<div>
    @if (this.User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark mt-2 disabled">Edit</a>
    }
    <a asp-action="Index" class="btn btn-info mt-2">Back to List</a>
</div>
