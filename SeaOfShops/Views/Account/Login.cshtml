@model SeaOfShops.ViewModels.LoginViewModel



<div class="position-relative overflow-hidden p-3 p-md-0 m-md-1 text-center">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h2>Login</h2>
        <div class="d-flex justify-content-center align-items-center ">
            <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="mt-2">
                    <label asp-for="Email"></label><br />
                    <input asp-for="Email" class="form-control mt-1" placeholder="Email" aria-label="Email" aria-describedby="basic-addon1" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="mt-2">
                    <label asp-for="Password"></label><br />
                    <input asp-for="Password" class="form-control mt-1" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="mt-2">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" class="form-check-input"/>
                </div>
                    <div class="mt-2">
                    <input type="submit" value="Войти" class="btn btn-outline-secondary mt-3" />
                </div>
            </form>
        </div>
        <p class="font-weight-normal mt-2">
            Don't have account?
            <a asp-action="Register" asp-controller="Account" class="btn btn-success mt-1">Register</a>
        </p>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-5 offset-8">
            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Role Admin (click "Email" to copy)
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <div class="mb-3 row">
                                <div class="col-sm-10">
                                    <button onclick="myFunction(1)" id="myInput1" style="background-color:aliceblue;border:hidden;">admin@gmail.com</button>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-sm-10">
                                    <button onclick="myFunction(2)" id="myInput2" style="background-color:aliceblue;border:hidden">123123</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Role Courier
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <div class="mb-3 row">
                                <div class="col-sm-10">
                                    <button onclick="myFunction(3)" id="myInput3" style="background-color:aliceblue;border:hidden">courier@gmail.com</button>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-sm-10">
                                    <button onclick="myFunction(4)" id="myInput4" style="background-color:aliceblue;border:hidden">123123</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Role God
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <div class="mb-3 row">
                                <div class="col-sm-10">
                                    <button onclick="myFunction(5)" id="myInput5" style="background-color:aliceblue;border:hidden">god@heaven.com</button>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <div class="col-sm-10">
                                    <button onclick="myFunction(6)" id="myInput6" style="background-color:aliceblue;border:hidden">666666</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function myFunction(a) {
     
        var copyText = document.getElementById("myInput" + a.toString()).textContent
    
        navigator.clipboard.writeText(copyText);
      
    }
</script>